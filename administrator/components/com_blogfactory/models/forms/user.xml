<?xml version="1.0" encoding="utf-8" ?>

<form>
    <fieldset name="details">
        <field name="id" type="user" readonly="true"/>
        <field name="subscription_notifications" type="list" default="1">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset name="author">
        <field name="name" type="text"/>
        <field name="url" type="text" filter="url"/>
    </fieldset>

    <fieldset name="avatar">
        <field name="avatar_source" type="BlogFactoryAvatarSource">
            <option value="none">COM_BLOGFACTORY_FORM_PROFILE_FIELD_AVATAR_SOURCE_OPTION_NONE</option>
            <option value="upload">COM_BLOGFACTORY_FORM_PROFILE_FIELD_AVATAR_SOURCE_OPTION_UPLOAD</option>
            <option value="gravatar">COM_BLOGFACTORY_FORM_PROFILE_FIELD_AVATAR_SOURCE_OPTION_GRAVATAR</option>
            <option value="cb">COM_BLOGFACTORY_FORM_PROFILE_FIELD_AVATAR_SOURCE_OPTION_CB</option>
        </field>

        <field name="delete_avatar" type="FactoryBoolean" default="0"/>
        <field name="avatar" type="BlogFactoryAvatar"/>
    </fieldset>
</form>
